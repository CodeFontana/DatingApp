@page "/verifyauth"

<h3>Verify Auth</h3>

<AuthorizeView Context="AuthContext">
    <Authorized>
        <h4>@AuthContext.User.Identity.Name is authenticated...</h4>
        <ul>
            <li>Access to Admin Role: @AuthContext.User.IsInRole("Admin")</li>
            <li>Access to Moderator Role: @AuthContext.User.IsInRole("Moderator")</li>
            <li>Access to Member Role: @AuthContext.User.IsInRole("Member")</li>
        </ul>
    </Authorized>
    <NotAuthorized>
        <h4>Not authenticated.</h4>
    </NotAuthorized>
</AuthorizeView>

