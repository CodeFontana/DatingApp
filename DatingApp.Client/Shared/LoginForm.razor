@inject IAuthenticationService AuthService

<EditForm Model="@_loginUser" class="form-inline ml-auto mt-2 mt-md-0">
    <div class="form-row">
        <div class="form-group d-flex">
            <InputText @bind-Value="_loginUser.Username" class="form-control mr-sm-2" type="text" placeholder="Username" />
            <InputText @bind-Value="_loginUser.Password" class="form-control mr-sm-2" type="password" placeholder="Password" />
        </div>
        <div class="form-group d-flex">
            <button class="btn btn-primary my-sm-0" type="submit" @onclick="() => HandleLogin()"><span class="oi oi-account-login" aria-hidden="true"></span> Login</button>
            <button class="btn btn-success mx-2 my-sm-0" type="submit" @onclick="() => HandleRegister()"><span class="oi oi-pencil" aria-hidden="true"></span> Register</button>
        </div>
    </div>
</EditForm>

@code {
    private LoginUserModel _loginUser = new();

    private async Task HandleLogin()
    {
        await AuthService.LoginAsync(_loginUser);
        _loginUser = new();
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
    }

    private void HandleRegister()
    {

    }
}
