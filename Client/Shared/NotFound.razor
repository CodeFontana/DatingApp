@inject NavigationManager Nav

<PageTitle>Not Found</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudText Align="Align.Center" Typo="Typo.h3">Sorry, there's nothing at this address.</MudText>
    <MudDivider DividerType="DividerType.Middle" Class="my-5"/>
    <MudButton Class="d-flex mx-auto" Variant="Variant.Filled" Color="Color.Primary" @onclick="HandleClick">Go Home</MudButton>
</MudContainer>

@code {
    private void HandleClick()
    {
        Nav.NavigateTo("/");
    }
}