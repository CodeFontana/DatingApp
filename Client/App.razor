<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView Context="AuthContext" RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" >
                <Authorizing>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <MudText Typo="Typo.h4" Align="Align.Center">Please wait...</MudText>
                    </LayoutView>
                </Authorizing>
                <NotAuthorized>
                    @if (AuthContext.User.Identity.IsAuthenticated == false)
                    {
                        <Redirect Url="/" />
                    }
                    else
                    {
                        <LayoutView Layout="@typeof(MainLayout)">
                            <MudText Typo="Typo.h4">You are not authorized to access this resource.</MudText>
                        </LayoutView>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <NotFound />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
