<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <AuthorizeRouteView Context="AuthContext" RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" >
                <Authorizing>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <text>Please wait, we are authorizing you...</text>
                    </LayoutView>
                </Authorizing>
                <NotAuthorized>
                    @if (AuthContext.User.Identity.IsAuthenticated == false)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <LayoutView Layout="@typeof(MainLayout)">
                            <text>You are not authorized to access this resource.</text>
                        </LayoutView>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <NotFound />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
