<MudPagination Rectangular="true" Color="Color.Primary" Count="@(MetaData.TotalPages)" @bind-Selected="@_selected"/>

<nav>
    <ul class="pagination justify-content-center">
        @foreach (var link in links)
        {
            <li @onclick="() => OnSelectedPageAsync(link)" style="cursor: pointer;" class="page-item @(link.Enabled ? null : "disabled") @(link.Active ? "active" : null)">
                <span class="page-link" href="#">@link.Text</span>
            </li>
        }
    </ul>
</nav>
