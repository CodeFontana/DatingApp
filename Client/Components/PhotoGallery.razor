@if (Member is not null
&& Member.Photos.Count > 0
&& SpinnerService.HoldSpinner == false)
{
    <MudCarousel Class="d-flex mx-auto mb-5"
             @ref="_carousel"
             ItemsSource="@Member.Photos"
             @bind-SelectedIndex="_position"
             ShowArrows="true"
             ShowBullets="false"
             AutoCycle="false"
             Style="width: 100%; height: 500px;">
        <ItemTemplate>
            <MudContainer Class="d-flex justify-center px-0">
                <MudImage Class="rounded-lg"
                      Src="@context.Filename"
                      Width="500"
                      Height="500"
                      Fluid="true" />
            </MudContainer>
        </ItemTemplate>
    </MudCarousel>

    <MudGrid>
        @for (int i = 0; i < Member.Photos.Count; i++)
        {
            int index = i;

            <MudItem xs="6" sm="4" lg="3" xl="2" Class="d-flex justify-center">

                <MudImage Class="rounded-lg"
                  Src="@Member.Photos[index].Filename"
                  Width="250"
                  Height="250"
                  Fluid="true"
                  @onclick="() => HandleThumbnailClick(index)" />

            </MudItem>
        }
    </MudGrid>
}
else 
{
    <MudText Align="Align.Center" Typo="Typo.h5">No photos available</MudText>
}
