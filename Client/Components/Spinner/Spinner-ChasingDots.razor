<div class="spin-chase">
    <div class="spin-chase-dot"></div>
    <div class="spin-chase-dot"></div>
    <div class="spin-chase-dot"></div>
    <div class="spin-chase-dot"></div>
    <div class="spin-chase-dot"></div>
    <div class="spin-chase-dot"></div>
</div>

<style>
    .spin-chase {
        width: 160px;
        height: 160px;
        position: relative;
        animation: spin-chase 2.5s infinite linear both;
    }

    .spin-chase-dot {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0;
        top: 0;
        animation: spin-chase-dot 2.0s infinite ease-in-out both;
    }

        .spin-chase-dot:before {
            content: '';
            display: block;
            width: 25%;
            height: 25%;
            background-color: var(--mud-palette-primary-darken);
            border-radius: 100%;
            animation: spin-chase-dot-before 2.0s infinite ease-in-out both;
        }

        .spin-chase-dot:nth-child(1) {
            animation-delay: -1.1s;
        }

        .spin-chase-dot:nth-child(2) {
            animation-delay: -1.0s;
        }

        .spin-chase-dot:nth-child(3) {
            animation-delay: -0.9s;
        }

        .spin-chase-dot:nth-child(4) {
            animation-delay: -0.8s;
        }

        .spin-chase-dot:nth-child(5) {
            animation-delay: -0.7s;
        }

        .spin-chase-dot:nth-child(6) {
            animation-delay: -0.6s;
        }

        .spin-chase-dot:nth-child(1):before {
            animation-delay: -1.1s;
        }

        .spin-chase-dot:nth-child(2):before {
            animation-delay: -1.0s;
        }

        .spin-chase-dot:nth-child(3):before {
            animation-delay: -0.9s;
        }

        .spin-chase-dot:nth-child(4):before {
            animation-delay: -0.8s;
        }

        .spin-chase-dot:nth-child(5):before {
            animation-delay: -0.7s;
        }

        .spin-chase-dot:nth-child(6):before {
            animation-delay: -0.6s;
        }

    @@keyframes spin-chase {
        100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes spin-chase-dot {
        80%, 100% {
            transform: rotate(360deg);
        }
    }

    @@keyframes spin-chase-dot-before {
        50% {
            transform: scale(0.4);
        }

        100%, 0% {
            transform: scale(1.0);
        }
    }
</style>
