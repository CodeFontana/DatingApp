@page "/member/{username}"
@attribute [Authorize]
@inject IMemberService MemberService
@inject IToastService ToastService

<div class="container">

    <h1>@Username</h1>

    @if (showError)
    {
        <div class="alert alert-danger text-center" role="alert">
            @errorText
        </div>
    }
    else if (member != null)
    {
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="card">
                    @if (string.IsNullOrWhiteSpace(member.PhotoUrl))
                    {
                        <img class="card-img-top img-thumbnail" src="./assets/user.png" alt="@member.KnownAs" />
                    }
                    else
                    {
                        <img class="card-img-top img-thumbnail" src="@member.PhotoUrl" alt="@member.KnownAs" />
                    }
                    <div class="card-body">
                        <strong>Location:</strong>
                        <p>@member.City, @member.Country</p>
                    </div>
                    <div class="card-body">
                        <strong>Age:</strong>
                        <p>@member.Age</p>
                    </div>
                    <div class="card-body">
                        <strong>Last active:</strong>
                        <p>@member.LastActive</p>
                    </div>
                    <div class="card-body">
                        <strong>Member since:</strong>
                        <p>@member.Created</p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group d-flex">
                            <button class="btn btn-primary">Like</button>
                            <button class="btn btn-success">Message</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8">
                <div class="member-tabcontrol">
                    <TabControl>
                        <TabPage Text=@($"About {@member.KnownAs}")>
                            <h4>Description</h4>
                            <p>@member.Introduction</p>
                            <h4>Looking for</h4>
                            <p>@member.LookingFor</p>
                        </TabPage>
                        <TabPage Text="Interests">
                            <h4>Interests</h4>
                            <p>@member.Interests</p>
                        </TabPage>
                        <TabPage Text="Photos">
                            <PhotoGallery Photos="@member.Photos"/>
                        </TabPage>
                        <TabPage Text="Messages">
                            <p>Messages will go here!</p>
                        </TabPage>
                    </TabControl>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string Username { get; set; }

    private MemberModel member = new();
    private bool showError = false;
    private string errorText;

    protected override async Task OnParametersSetAsync()
    {
        Tuple<bool, string, MemberModel> result = await MemberService.GetMemberAsync(Username);

        if (result.Item1)
        {
            member = result.Item3;
            StateHasChanged();
        }
        else
        {
            showError = true;
            errorText = $"Request failed: {result.Item2}";
            ToastService.ShowError($"Request failed: {result.Item2}");
        }
    }
}
