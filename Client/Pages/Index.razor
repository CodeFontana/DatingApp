@page "/"
@inject NavigationManager NavManager

@if (registerMode)
{
    <Registration OnCancelRegistration="HandleOnCancelRegistration" />
}
else
{
    <MudContainer>
        <MudGrid Justify="Justify.Center">
            <MudItem xs="12" Class="d-flex justify-center">
                <MudText Typo="Typo.h2" Align="Align.Center">Find your match</MudText>
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudText Align="Align.Center" Style="font-size: 1.25rem; font-weight: 300;">Come on in to view your matches... all you need to do is sign up!</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudDivider DividerType="DividerType.Middle"  />
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-center">
                <MudButton Class="mr-2" Variant="Variant.Filled" Color="Color.Success" @onclick="() => registerMode = !registerMode">Register</MudButton>
                <MudButton Class="mr-2" Variant="Variant.Filled" Color="Color.Info">Learn more</MudButton>
            </MudItem>
        </MudGrid>
    </MudContainer>
}

@code {
    private bool registerMode = false;

    private void HandleOnCancelRegistration(bool result)
    {
        registerMode = false;
    }
}
